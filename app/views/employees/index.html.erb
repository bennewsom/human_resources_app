<h1 class="page-header"><%= "#{@department.department_name}" %></h1>
<div class="table-responsive">
  <table class="table table-striped" role="grid">
    <thead>
      <tr>
        <th>Employee Name</th>
        <th>Position</th>
        <th>Start Date</th>
      </tr>
    </thead>
    <tbody>
      <% @employees.each do |employee| %>
        <tr>
          <td><%= link_to "#{employee.first_name}"" ""#{employee.last_name}", company_department_employee_path(@company, @department, employee) %></td>
          <td><%= employee.position_title %></td>
          <td><%= employee.employee_hire_date %></td>
          <td><%= link_to 'Manage Employee Leave', company_department_employee_leave_totals_path(@company, @department, employee) %></td>
          <td>
            <i class="fa fa-<%= employee.gender.downcase %>"></i>
          </td>
          <td>
            <%= link_to 'Edit', edit_company_department_employee_path(@company, @department, employee) %>&nbsp;
            <%= link_to 'Delete', company_department_employee_path(@company, @department, employee), method: :delete, data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<%= will_paginate @employees %><br>
<div>
  <%= link_to "Add Employee", new_company_department_employee_path, class: 'btn btn-primary' %>
</div>
<div>
  <%= link_to "Back to Departments", company_departments_path(@company, @department) %>
</div>


