<div class="row">
  <%= render partial: 'shared/errors', object: @company.errors %>
  <div class="col-sm-6">
    <header>
      <h1>Edit <%= @company.company_name  %> Company</h1>
    </header>
  <%= form_for @company, html: {class: 'well', multipart: true}  do |f| %>
    <div class="form-group">
      <%= f.label :company_name %>
      <%= f.text_field :company_name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :company_avatar %>
      <%= f.file_field :company_avatar, class: 'form-control' %>
    </div>
    <%= f.submit 'Save', class: 'btn btn-primary' %>
  <% end %>
  </div>
</div>